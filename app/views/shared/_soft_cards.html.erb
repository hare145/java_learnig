<div class="row justify-content-center">
  <% softs.each do |soft| %>
    <div class="col-3 m-3">
      <div class="card border border-dark">
      <div class="card-body">
        <h6 class="card-title m-2"><%= link_to soft.company, soft_path(soft.id), class: "text-dark" %></h6>
        <h6 class="card-subtitle mt-2 mb-2 text-muted text-end"><%= soft.work.kind %></h6>
        <div class="row border_dashe m-1"></div>
        <p class="card-text mt-3 mb-3"><%= truncate("#{soft.introduction}", length: 35, omission: "..." ) %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>